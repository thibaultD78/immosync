<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="700.0" style="-fx-background-color: #DDE1E7;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.immosync.immosyncapp.controller.bienController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="IMMO" textFill="#2C3E50">
            <font><Font name="System Bold" size="20.0" /></font>
        </Label>
        <Label layoutX="74.0" layoutY="14.0" text="SYNC" textFill="#FF9F1C">
            <font><Font name="System Bold" size="20.0" /></font>
        </Label>

        <Button layoutX="530.0" layoutY="14.0" mnemonicParsing="false" onAction="#retourAccueil" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #888888; -fx-background-radius: 20; -fx-cursor: hand;" text="Accueil" textFill="WHITE">
            <font><Font name="System Bold" size="13.0" /></font>
        </Button>

        <Label layoutX="230.0" layoutY="70.0" text="liste des biens" textFill="#333333">
            <font><Font name="System Bold" size="32.0" /></font>
        </Label>

        <TableView fx:id="bienTable" layoutX="50.0" layoutY="140.0" prefHeight="250.0" prefWidth="500.0" style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <columns>
                <TableColumn fx:id="colId" prefWidth="100.0" text="ID" />
                <TableColumn fx:id="colNom" prefWidth="200.0" text="NOM" />
                <TableColumn fx:id="colAdresse" prefWidth="198.0" text="ADRESSE" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <VBox layoutX="565.0" layoutY="220.0" spacing="20.0">
            <children>
                <Button mnemonicParsing="false" onAction="#ouvrirCreationBien" prefHeight="40.0" prefWidth="177.0" style="-fx-background-color: #2D549E; -fx-background-radius: 20; -fx-cursor: hand;" text="Créer un nouveau bien" textFill="WHITE">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Button>
                <Button mnemonicParsing="false" onAction="#modifierBien" prefHeight="35.0" prefWidth="130.0" style="-fx-background-color: #436FB0; -fx-background-radius: 20; -fx-cursor: hand;" text="Modifier   ▶" textAlignment="CENTER" textFill="WHITE" translateX="40.0">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
